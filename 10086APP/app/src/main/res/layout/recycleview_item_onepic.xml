<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_onepic_image"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/item_onepic_time"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/item_onepic_autor"
        android:layout_toStartOf="@+id/item_onepic_image"
        android:text="7小时前"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_onepic_title"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="注意了！微信八月1号开始收费"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_onepic_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_onepic_image"
        android:layout_alignStart="@+id/item_onepic_title"
        android:text="选机"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/item_onepic_pageviews"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/item_onepic_image"
        android:layout_toEndOf="@+id/item_onepic_autor"
        android:src="@drawable/menu_find_black" />

    <TextView
        android:id="@+id/item_onepic_totleviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_onepic_image"
        android:layout_toEndOf="@+id/item_onepic_pageviews"
        android:textSize="12sp"
        android:text="15.7万" />

</RelativeLayout>