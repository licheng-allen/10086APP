<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_item_image_layout"
    android:transitionName="image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="150dp"
    android:minHeight="170dp"
    android:maxWidth="150dp"
    android:maxHeight="170dp"
    android:background="@drawable/item_shape"
    android:layout_marginLeft="8dp"
    android:elevation="10dp"
    android:layout_marginRight="8dp">

    <ImageView
        android:id="@+id/card_image_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/menu_find_blue" />


    <Button
        android:id="@+id/card_image_button"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_below="@+id/card_image_logo"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_line_while"
        android:text="去兑换" />

</RelativeLayout>