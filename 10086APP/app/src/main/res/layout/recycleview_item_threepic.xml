<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_threepic_title"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="注意了！微信八月1号开始收费。经典！经典！经典！不容错过"
        android:textSize="16sp"
        android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="8dp">
    <ImageView
        android:id="@+id/item_threepic_image1"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <ImageView
        android:id="@+id/item_threepic_image2"
        android:layout_width="120dp"
        android:layout_marginLeft="4dp"
        android:layout_height="120dp" />
    <ImageView
        android:id="@+id/item_threepic_image3"
        android:layout_width="120dp"
        android:layout_marginLeft="4dp"
        android:layout_height="120dp" />
</LinearLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_threepic_time"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:text="7小时前"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_threepic_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_onepic_time"
        android:layout_marginLeft="16dp"
        android:text="选机"
        android:textSize="12sp" />

        <ImageView
            android:id="@+id/item_threepic_pageviews"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/item_threepic_autor"
            android:src="@drawable/pv" />

        <TextView
            android:id="@+id/item_threepic_totleviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_threepic_pageviews"
            android:text="15.7万"
            android:textSize="12sp" />

</RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>